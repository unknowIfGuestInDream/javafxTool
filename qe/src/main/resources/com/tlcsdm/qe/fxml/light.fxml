<ScrollPane fitToHeight="true" fitToWidth="true" minHeight="750.0" minWidth="1100.0" stylesheets="@light.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tlcsdm.qe.tools.FxmlDemo">
    <content>
        <SplitPane id="splitPane" fx:id="splitPane" dividerPositions="0.25">
            <items>
                <VBox maxWidth="240.0" minWidth="140.0">
                    <children>
                        <TreeView id="treeView" fx:id="treeView" prefHeight="200.0" prefWidth="200.0"
                                  VBox.vgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox minWidth="200.0">
                    <children>
                        <Label fx:id="lblControl" text="Title">
                            <VBox.margin>
                                <Insets left="5.0" top="3.0"/>
                            </VBox.margin>
                        </Label>
                        <Separator>
                            <VBox.margin>
                                <Insets bottom="3.0"/>
                            </VBox.margin>
                        </Separator>
                        <GridPane VBox.vgrow="ALWAYS">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="310.0"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <VBox minHeight="300.0" styleClass="innerVbox">
                                    <children>
                                        <BorderPane VBox.vgrow="ALWAYS">
                                            <top>
                                                <HBox alignment="CENTER_LEFT" styleClass="innerHbox"
                                                      BorderPane.alignment="CENTER">
                                                    <children>
                                                        <Label text="Power Control">
                                                            <HBox.margin>
                                                                <Insets/>
                                                            </HBox.margin>
                                                            <padding>
                                                                <Insets left="5.0"/>
                                                            </padding>
                                                        </Label>
                                                        <Button fx:id="btnOff" mnemonicParsing="false" text="OFF">
                                                            <HBox.margin>
                                                                <Insets left="5.0" />
                                                            </HBox.margin>
                                                        </Button>
                                                    </children>
                                                    <BorderPane.margin>
                                                        <Insets bottom="10.0" />
                                                    </BorderPane.margin>
                                                    <opaqueInsets>
                                                        <Insets />
                                                    </opaqueInsets>
                                                </HBox>
                                            </top>
                                            <center>
                                                <GridPane BorderPane.alignment="CENTER">
                                                    <columnConstraints>
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                                    </columnConstraints>
                                                    <rowConstraints>
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                                    </rowConstraints>
                                                    <children>
                                                        <Button fx:id="btnDirectLevel" mnemonicParsing="false" onAction="#directLevelAction" text="Set to direct level" GridPane.columnIndex="2" GridPane.columnSpan="2" GridPane.halignment="LEFT" GridPane.hgrow="ALWAYS" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                                             <GridPane.margin>
                                                <Insets left="5.0" />
                                             </GridPane.margin></Button>
                                                        <Slider id="sliderLight" fx:id="sliderLight"
                                                                blockIncrement="1.0" max="255.0" orientation="VERTICAL"
                                                                value="127.0" GridPane.columnIndex="1"
                                                                GridPane.rowSpan="3">
                                                            <GridPane.margin>
                                                                <Insets bottom="10.0" left="45.0"/>
                                                            </GridPane.margin>
                                                        </Slider>
                                                        <AnchorPane prefHeight="274.0" prefWidth="106.0" GridPane.rowSpan="3">
                                                            <children>
                                                                <Rectangle fx:id="rectLighting" arcHeight="5.0"
                                                                           arcWidth="5.0" fill="#f0f3f5" height="234.0"
                                                                           layoutY="13.0" stroke="BLACK"
                                                                           strokeType="INSIDE" width="105.0"/>
                                                                <SVGPath fx:id="svgLighting"
                                                                         content="M40,60 C42,48 44,30 25,32"
                                                                         layoutX="17.0" layoutY="48.0"
                                                                         strokeType="INSIDE"/>
                                                                <SVGPath fx:id="svgBase"
                                                                         content="M40,60 C42,48 44,30 25,32"
                                                                         layoutX="17.0" layoutY="48.0"/>
                                                                <Label layoutX="4.0" layoutY="193.0"
                                                                       text="Actual level:">
                                                                    <font>
                                                                        <Font size="10.0"/>
                                                                    </font>
                                                                </Label>
                                                                <Label fx:id="lblActualLevel" layoutX="14.0"
                                                                       layoutY="207.0" text="50%">
                                                                    <font>
                                                                        <Font size="16.0"/>
                                                   </font></Label>
                                                            </children>
                                             <GridPane.margin>
                                                <Insets left="5.0" />
                                             </GridPane.margin>
                                                        </AnchorPane>
                                                        <Button fx:id="btnUp" mnemonicParsing="false"
                                                                onAction="#upLevelAction" styleClass="innerButton"
                                                                text="Up" wrapText="true" GridPane.columnIndex="2"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <Button fx:id="btnDown" mnemonicParsing="false"
                                                                onAction="#downLevelAction" styleClass="innerButton"
                                                                text="Down" wrapText="true" GridPane.columnIndex="2"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <Button fx:id="btnStepUp" mnemonicParsing="false"
                                                                styleClass="innerButton" text="Step Up" wrapText="true"
                                                                GridPane.columnIndex="3" GridPane.halignment="CENTER"
                                                                GridPane.hgrow="ALWAYS" GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <Button fx:id="btnStepDown" mnemonicParsing="false"
                                                                styleClass="innerButton" text="Step Down"
                                                                wrapText="true" GridPane.columnIndex="3"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <Button fx:id="btnMax" mnemonicParsing="false"
                                                                onAction="#maxLevelAction" styleClass="innerButton"
                                                                text="Max" GridPane.columnIndex="4"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <Button fx:id="btnMin" mnemonicParsing="false"
                                                                onAction="#minLevelAction" styleClass="innerButton"
                                                                text="Min" GridPane.columnIndex="4"
                                                                GridPane.halignment="CENTER" GridPane.hgrow="ALWAYS"
                                                                GridPane.rowIndex="1" GridPane.valignment="CENTER">
                                                            <GridPane.margin>
                                                                <Insets left="5.0" right="5.0"/>
                                                            </GridPane.margin>
                                                        </Button>
                                                        <TextField fx:id="txtDirectLevel"
                                                                   onKeyPressed="#directLevelEnterAction"
                                                                   GridPane.columnIndex="4" GridPane.hgrow="ALWAYS"
                                                                   GridPane.rowIndex="2"/>
                                                    </children>
                                                    <padding>
                                                        <Insets left="5.0" right="5.0"/>
                                                    </padding>
                                                </GridPane>
                                            </center>
                                            <VBox.margin>
                                                <Insets/>
                                            </VBox.margin>
                                        </BorderPane>
                                    </children>
                                    <opaqueInsets>
                                        <Insets/>
                                    </opaqueInsets>
                                    <GridPane.margin>
                                        <Insets />
                                    </GridPane.margin>
                                </VBox>
                                <VBox styleClass="innerVbox" GridPane.rowIndex="1" GridPane.rowSpan="2">
                                    <children>
                                        <Label text="Label"/>
                                    </children>
                                </VBox>
                                <VBox fx:id="boxChart" styleClass="innerVbox" GridPane.columnIndex="1"
                                      GridPane.rowSpan="2">
                                    <children>
                                        <HBox alignment="CENTER_LEFT" styleClass="innerHbox">
                                            <children>
                                                <Label text="Dimming Curve">
                                                    <padding>
                                                        <Insets left="5.0"/>
                                                    </padding>
                                                </Label>
                                                <ComboBox fx:id="cmbDimmingCurve">
                                                    <HBox.margin>
                                                        <Insets left="5.0"/>
                                                    </HBox.margin>
                                    </ComboBox>
                                                <Button fx:id="btnDimmingSet" mnemonicParsing="false" text="Set">
                                                    <HBox.margin>
                                                        <Insets left="5.0"/>
                                                    </HBox.margin>
                                                </Button>
                                            </children>
                                            <VBox.margin>
                                                <Insets bottom="10.0" left="5.0"/>
                                            </VBox.margin>
                                        </HBox>

                                    </children>
                                </VBox>
                                <VBox styleClass="innerVbox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                            </children>
                        </GridPane>
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </content>
</ScrollPane>
