<?xml version="1.0" encoding="UTF-8"?>

<included>
    <!-- 排除启动时的beanutils日志 -->
    <logger name="org.apache.commons.beanutils.FluentPropertyBeanIntrospector" level="error"/>
    <logger name="org.apache.commons.beanutils.converters" level="OFF"/>
    <conversionRule conversionWord="ip" converterClass="com.tlcsdm.core.logging.logback.IPLogConverter"/>
    <!--日志文件保存路径-->
    <property name="LOG_FILE_PATH" value="logs"/>
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%ip] [%thread] %logger{50} - %msg%n"/>
    <property name="CONSOLE_LOG_PATTERN" value="${FILE_LOG_PATTERN}"/>
    <property name="CONSOLE_LOG_CHARSET" value="UTF-8"/>
</included>
